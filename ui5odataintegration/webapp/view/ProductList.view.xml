<mvc:View controllerName="ui5odataintegration.controller.ProductList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <Table items="{/Products}">
                <headerToolbar>
                    <Toolbar >
                        <SearchField placeholder="Search Products"></SearchField>

                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>productId}" />
                    </Column>
                    <Column>
                        <Text text="Product Name" />
                    </Column>
                    <Column>
                        <Text text="Quantity Per Unit" />
                    </Column>
                    <Column>
                        <Text text="Unit Price" />
                    </Column>
                    <Column>
                        <Text text="Units In Stock" />
                    </Column>
                    <Column>
                        <Text text="Units On Order" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem press="onItemPress" type="Navigation">
                        <cells>
                            <Text text="{ProductID}" />
                            <Text text="{ProductName}" />
                            <Text text="{QuantityPerUnit}" />
                            <Text text="{UnitPrice}" />
                            <Text text="{UnitsInStock}" />
                            <Text text="{UnitsOnOrder}" />
                            
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>